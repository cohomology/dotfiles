#!/bin/bash

export PATH="/home/kilian/.stack/programs/x86_64-linux/ghc-nopie-8.2.2/bin:~/.local/bin:~/.cargo/bin:~/.xmonad/bin:$PATH"

# read .Xresources
xrdb -merge .Xresources

# set german keyboard
setxkbmap de

# load system tray
stalonetray &

# start screensaver
xscreensaver -no-splash &

# load background image
feh --bg-scale ~/Bilder/schlaubetal.jpg &

# start removable file manager
udiskie &

# start xfce4 power manager
xfce4-power-manager

# start wireless / network applet
nm-applet --sm-disable &

# rxvt-unicode daemon
urxvtd -q -f -o &

# compositing effects
xcompmgr -c -f &

# start audio server
pulseaudio --start &

# xmonad 
stack exec xmonad -- --replace

